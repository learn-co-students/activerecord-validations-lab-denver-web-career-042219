<h1>Create a Post</h1>
<% if @post.errors.any?  %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for :post, url:posts_path do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br/>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br/>
    <%= f.label :summary %><br>
    <%= f.text_area :summary %><br/>
    <%= f.label :category %><br>
    <p><%= f.select :category, options_for_select(["Fiction", "Non-Fiction"])  %></p>
  <%= f.submit %>
<% end %>
